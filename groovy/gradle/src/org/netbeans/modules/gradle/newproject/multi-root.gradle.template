<#-- FreeMarker template (see http://freemarker.org/) -->
<#assign licenseFirst = "/*">
<#assign licensePrefix = " * ">
<#assign licenseLast = " */">
<#include "${project.licensePath}">

<#if description != "">
description = '${description}'
</#if>
allprojects {

<#if group != "">
    group = '${group}'

</#if>
    repositories {
        jcenter()
    }
}

subprojects {
    apply plugin: 'java'

<#if dependencies??>
    dependencies {
<#list dependencies as dep>
        ${dep}
</#list>
    }
</#if>
}